SELECT 
  cntct_id AS id, crmacct_number, crmacct_name,
  cntct.*, addr.*
FROM cntct 
  LEFT OUTER JOIN crmacct ON (crmacct_cntct_id_1=cntct_id) 
  LEFT OUTER JOIN addr ON (cntct_addr_id=addr_id) 
WHERE (cntct_owner_username=getEffectiveXtUser())
ORDER BY cntct_name;
